<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="csci310.team53.easyteamup">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".EasyTeamUp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Csci310">
        <activity
            android:name=".activities.CreateEventActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name=".activities.HostedEventsActivity"
            android:exported="false" />
        <activity
            android:name=".activities.EventsActivity"
            android:exported="false" />
        <activity
            android:name=".activities.EventDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".activities.InviteActivity"
            android:exported="false" />
        <activity
            android:name=".activities.InboxActivity"
            android:exported="false"
            android:label="@string/title_activity_inbox"
            android:theme="@style/Theme.Csci310" />
        <activity
            android:name=".activities.HomeActivity"
            android:exported="false" />
        <activity
            android:name=".activities.InviteResultActivity"
            android:exported="false" />
        <activity
            android:name=".activities.MapsActivity"
            android:exported="false" />
        <activity android:name=".activities.MenuActivity" />
        <activity
            android:name=".activities.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".EasyTeamUp"
             />

        <activity android:name=".activities.RegistrationActivity" />

        <meta-data android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${MAPS_API_KEY}" />

    </application>

</manifest>