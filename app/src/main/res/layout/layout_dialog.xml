<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/dialogStartTimeText"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="52dp"
        android:ems="8"
        android:hint="Start time"
        android:inputType="date"
        android:minHeight="48dp"
        android:onClick="sTimePickerClick"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/dialogSTime"
        android:layout_width="52dp"
        android:layout_height="48dp"
        android:layout_marginTop="52dp"
        android:onClick="dialogSTimePickerClick"
        app:icon="@drawable/ic_clock"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.174"
        app:layout_constraintStart_toEndOf="@+id/dialogStartTimeText"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/dialogETime"
        android:layout_width="52dp"
        android:layout_height="48dp"
        android:layout_marginTop="28dp"
        android:onClick="eTimePickerClick"
        app:icon="@drawable/ic_clock"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.174"
        app:layout_constraintStart_toEndOf="@+id/dialogEndTimeText"
        app:layout_constraintTop_toBottomOf="@+id/dialogSTime" />

    <EditText
        android:id="@+id/dialogEndTimeText"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="28dp"
        android:ems="8"
        android:hint="End time"
        android:inputType="date"
        android:minHeight="48dp"
        android:onClick="dialogETimePickerClick"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialogStartTimeText" />

</androidx.constraintlayout.widget.ConstraintLayout>